@model List<pupupu.Bll.Models.Order>

<h2>Список заказов</h2>

<table class="table">
    <thead>
    <tr>
        <th>Номер заказа</th>
        <th>Дата заказа</th>
        <th>Статус</th>
        <th>Действия</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var order in Model)
    {
    <tr>
        <td>
            <a asp-action="Details" asp-route-id="@order.Id">@order.Id</a>
        </td>
        <td>@order.OrderDate.ToString("dd.MM.yyyy HH:mm")</td>
        <td>@order.OrderStatus</td>
        <td>
            <form action="/AdminPanel/OrdersManagement/ProcessOrder/@order.Id" controller="AdminPanelOrdersManagementController" method="post" style="display:inline;">
                <input type="hidden" name="orderId" value="@order.Id" />
                <button type="submit" class="btn btn-success">Process</button>
            </form>
            <form action="/AdminPanel/OrdersManagement/CancelOrder/@order.Id" controller="AdminPanelOrdersManagementController" method="post" style="display:inline;">
                <input type="hidden" name="orderId" value="@order.Id" />
                <button type="submit" class="btn btn-danger">Cancel</button>
            </form>
        </td>
    </tr>
    }
    </tbody>
</table>